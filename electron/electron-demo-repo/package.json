{
  "name": "electron-demo-repo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch-ts": "lerna run --stream --scope main watch-ts",
    "render-react-dev": "lerna run --stream --scope render-react dev",
    "start-electron": "lerna run --stream --scope main start-electron",
    "start":"concurrently -k -p \"[{name}]\" -n \"React,TypeScript\" -c \"yellow.bold,cyan.bold\" \"npm run render-react-dev\" \"npm run watch-ts\""
  },
  "devDependencies": {
    "@types/node": "^14.14.30",
    "concurrently": "^5.3.0",
    "electron-is-dev": "^1.2.0",
    "lerna": "^3.22.1",
    "typescript": "^4.1.2",
    "wait-on": "^5.2.1"
  }
}
