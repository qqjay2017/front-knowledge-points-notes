{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
 
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    //  "jest", "puppeteer", 
    "rootDir": ".",
    "paths": {
      // "@vue/compat": ["packages/vue-compat/src"],
      // 识别引入第三方模块
      "@vue/*": ["packages/*/src"],
      // "vue": ["packages/vue/src"]
    }
  },
  "include": [
    // "packages/global.d.ts",
    "packages/*/src",
    // "packages/runtime-dom/types/jsx.d.ts",
    // "packages/*/__tests__",
    // "test-dts"
  ]
}
